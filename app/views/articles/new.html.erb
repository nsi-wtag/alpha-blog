<h1>Create New Article</h1>

<% if @article.errors.any? %>
  <ul>
    <% @article.errors.full_messages.each do |error_msg| %>
      <li><%= error_msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
  <div>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </div>

  <%= f.submit %>
<% end %>
