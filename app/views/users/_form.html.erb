<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |error_msg| %>
      <li><%= error_msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <div>
    <%= f.label :username %><br/>
    <%= f.text_field :username, placeholder: "Enter your username" %>
  </div>

  <div>
    <%= f.label :email %><br/>
    <%= f.email_field :email, placeholder: "Enter your email" %>
  </div>

  <div>
    <%= f.label :password %><br/>
    <%= f.password_field :password, placeholder: "Enter your password" %>
  </div>

  <br/>

  <%= f.submit "Sign up" %>
<% end %>
